{
  "app-id": "app.drey.Warp.Devel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "warp",
  "finish-args": [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=ipc",
    "--device=dri",
    "--share=network",
    "--filesystem=xdg-download",
    "--talk-name=org.freedesktop.FileManager1",
    "--env=RUST_LOG=warp=debug",
    "--env=G_MESSAGES_DEBUG=none",
    "--env=RUST_BACKTRACE=1"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin"
  },
  "modules": [
    {
      "name": "warp",
      "buildsystem": "meson",
      "config-opts": [
        "-Dprofile=development"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../",
          "skip": [
            "target",
            "build",
            "_build",
            "builddir",
            "build-aux/app",
            ".flatpak",
            ".flatpak-builder",
            "build-aux/.flatpak",
            "build-aux/.flatpak-builder",
            "flatpak_out",
            "flatpak_repo",
            ".fenv"
          ]
        },
        "cargo-sources.json",
        {
          "type": "shell",
          "commands": [
            "mkdir .cargo",
            "cp cargo/config .cargo/"
          ]
        }
      ],
      "run-tests": true
    }
  ]
}
