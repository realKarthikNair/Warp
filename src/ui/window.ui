<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <menu id="primary_menu">
    <section>
      <item>
        <!-- Translators: menu item -->
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <!-- Translators: menu item -->
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <!-- Translators: menu item -->
        <attribute name="label" translatable="yes">_Help</attribute>
        <attribute name="action">app.help</attribute>
      </item>
      <item>
        <!-- Translators: menu item -->
        <attribute name="label" translatable="yes">_About Warp</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
  <object class="GtkFileDialog" id="file_dialog">
    <property name="modal">True</property>
  </object>
  <object class="AdwToast" id="inserted_code_toast">
    <signal name="dismissed" handler="inserted_code_toast_dismissed" swapped="true"/>
    <!-- Translators: Notification when code was automatically detected in clipboard and inserted into code entry on receive page -->
    <property name="title" translatable="yes">Inserted code from clipboard</property>
    <property name="timeout">3</property>
  </object>
  <object class="AdwAlertDialog" id="ask_abort_dialog">
    <!-- Translators: File receive confirmation message dialog title -->
    <property name="heading" translatable="yes">Abort File Transfer?</property>
    <property name="body" translatable="yes">Do you want to abort the current file transfer?</property>
    <property name="close_response">continue</property>
    <responses>
      <response id="continue" translatable="yes">_Continue</response>
      <response id="abort" appearance="destructive" translatable="yes">_Abort</response>
    </responses>
  </object>
  <object class="AdwAlertDialog" id="no_registered_application_error_dialog">
    <!-- Translators: Error dialog title -->
    <property name="heading" translatable="yes">Unable to Open File</property>
    <responses>
      <response id="close" translatable="yes">_Close</response>
      <response id="show-in-folder" translatable="yes">_Show in Folder</response>
    </responses>
  </object>
  <object class="GtkSizeGroup">
    <property name="mode">horizontal</property>
    <widgets>
      <widget name="send_select_file_button" />
      <widget name="send_select_folder_button" />
    </widgets>
  </object>
  <template class="WarpApplicationWindow" parent="AdwApplicationWindow">
    <signal name="notify::is-active" handler="add_code_from_clipboard" swapped="true"/>
    <property name="width-request">360</property>
    <property name="height-request">200</property>
    <property name="default-width">460</property>
    <property name="default-height">600</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 400sp</condition>
        <setter object="view_switcher_bar" property="reveal">True</setter>
        <setter object="headerbar" property="title-widget"/>
      </object>
    </child>
    <property name="content">
      <object class="AdwToastOverlay" id="toast_overlay">
        <child>
          <object class="AdwNavigationView" id="navigation_view">
            <signal name="notify::visible-page" handler="navigation_view_visible_page_notify" swapped="true"/>
            <child>
              <object class="AdwNavigationPage" id="page_root">
                <property name="title" translatable="yes">Warp</property>
                <property name="child">
                  <object class="AdwToolbarView">
                    <child type="top">
                      <object class="AdwHeaderBar" id="headerbar">
                        <property name="centering-policy">strict</property>
                        <property name="title-widget">
                          <object class="AdwViewSwitcher" id="title">
                            <property name="stack">stack</property>
                            <property name="policy">wide</property>
                          </object>
                        </property>
                        <child type="start">
                          <object class="GtkMenuButton" id="appmenu_button">
                            <property name="icon-name">open-menu-symbolic</property>
                            <property name="menu-model">primary_menu</property>
                            <property name="primary">True</property>
                            <property name="tooltip-text" translatable="yes">Main Menu</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child type="bottom">
                      <object class="AdwViewSwitcherBar" id="view_switcher_bar">
                        <property name="stack">stack</property>
                      </object>
                    </child>
                    <property name="content">
                      <object class="GtkBox" id="label">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="AdwViewStack" id="stack">
                            <signal name="notify::visible-child-name" handler="add_code_from_clipboard" swapped="true"/>
                            <child>
                              <object class="AdwViewStackPage">
                                <property name="name">send</property>
                                <property name="title" translatable="yes">_Send</property>
                                <property name="use-underline">True</property>
                                <property name="icon-name">send-to-symbolic</property>
                                <property name="child">
                                  <object class="GtkBox" id="send_box">
                                    <property name="orientation">vertical</property>
                                    <style>
                                      <class name="send-box"/>
                                    </style>
                                    <child>
                                      <object class="AdwStatusPage" id="send_status_page">
                                        <property name="vexpand">True</property>
                                        <property name="title" translatable="yes">Send File</property>
                                        <property name="description" translatable="yes">Select or drop the file or directory to send</property>
                                        <property name="icon-name">send-to-symbolic</property>
                                        <child>
                                          <object class="GtkBox">
                                            <property name="orientation">vertical</property>
                                            <property name="halign">center</property>
                                            <property name="spacing">12</property>
                                            <child>
                                              <object class="GtkButton" id="send_select_file_button">
                                                <signal name="clicked" handler="select_file" swapped="true"/>
                                                <!-- Translators: Button -->
                                                <property name="label" translatable="yes">Select _File…</property>
                                                <property name="use-underline">True</property>
                                                <property name="width-request">150</property>
                                                <property name="hexpand">False</property>
                                                <style>
                                                  <class name="suggested-action"/>
                                                  <class name="pill"/>
                                                </style>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkButton" id="send_select_folder_button">
                                                <signal name="clicked" handler="select_folder" swapped="true"/>
                                                <!-- Translators: Button -->
                                                <property name="label" translatable="yes">Select F_older…</property>
                                                <property name="use-underline">True</property>
                                                <property name="width-request">150</property>
                                                <property name="hexpand">False</property>
                                                <style>
                                                  <class name="pill"/>
                                                </style>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="AdwViewStackPage">
                                <property name="name">receive</property>
                                <property name="title" translatable="yes">_Receive</property>
                                <property name="use-underline">True</property>
                                <property name="icon-name">folder-download-symbolic</property>
                                <property name="child">
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <child>
                                      <object class="AdwStatusPage">
                                        <property name="vexpand">True</property>
                                        <property name="title" translatable="yes">Receive File</property>
                                        <!-- Translators: Text above code input box, transmit code is a noun -->
                                        <property name="description" translatable="yes">Enter the transmit code from the sender</property>
                                        <property name="icon-name">folder-download-symbolic</property>
                                        <child>
                                          <object class="GtkBox">
                                            <property name="orientation">vertical</property>
                                            <property name="halign">center</property>
                                            <property name="spacing">24</property>
                                            <child>
                                              <object class="AdwClamp">
                                                <child>
                                                  <object class="GtkEntry" id="code_entry">
                                                    <signal name="activate" handler="receive_button_clicked" swapped="true"/>
                                                    <!-- Translators: Entry placeholder; This is a noun -->
                                                    <property name="placeholder-text" translatable="yes">Transmit Code</property>
                                                    <property name="hexpand">False</property>
                                                    <property name="buffer">
                                                      <object class="GtkEntryBuffer">
                                                        <signal name="notify::text" handler="code_entry_changed" swapped="true"/>
                                                      </object>
                                                    </property>
                                                    <signal name="icon-release" handler="scan_qr_code_button_clicked" swapped="true"/>                    
                                                    <style>
                                                      <class name="card"/>
                                                    </style>
                                                  </object>
                                                </child>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkButton" id="receive_button">
                                                <signal name="clicked" handler="receive_button_clicked" swapped="true"/>
                                                <property name="halign">center</property>
                                                <property name="width-request">150</property>
                                                <property name="sensitive">False</property>
                                                <!-- Translators: Button -->
                                                <property name="label" translatable="yes">Receive _File</property>
                                                <property name="use-underline">True</property>
                                                <style>
                                                  <class name="suggested-action"/>
                                                  <class name="pill"/>
                                                </style>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="ActionView" id="action_view">
                <property name="title" translatable="yes">File Transfer</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
